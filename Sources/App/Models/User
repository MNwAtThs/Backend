import FluentSQLite
import Vapor

final class User: SQLiteModel 
{
    var id: Int?
    var username: String
    var password: String
    var email: String
    var createdAt: Date?
    var updatedAt: Date?
    var token: String?    

    init(id: Int? = nil, username: String, password: String, email: String)
    {
        self.id = id
        self.username = username
        self.password = password
        self.email = email
    }

    final class Public: Content
    {
        var id: Int?
        var username: String
        var email: String
        var createdAt: Date?
        var updatedAt: Date?
        var token: String?
        
        init(id: Int? = nil, username: String, email: String, createdAt: Date? = nil, updatedAt: Date? = nil, token: String? = nil)
        {
            self.id = id
            self.username = username
            self.email = email
            self.createdAt = createdAt
            self.updatedAt = updatedAt
            self.token = token
        }
    }

}

extension User: Content {}
extension User: Migration {}
extension User: Parameter {}